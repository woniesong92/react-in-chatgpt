{
  "manifest_version": 3,
  "name": "React in ChatGPT",
  "description": "Render React components directly in ChatGPT",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/", "https://chat.openai.com/*/*"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "icon-128.png", "icon-34.png", "react-dom.production.min.js", "react.production.min.js", "tailwind.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
